<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/base_bg">

    <com.xuancao.programframes.ui.view.PTitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_login_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_45_dp"
        android:textColor="@color/common_color_FFFFFF"
        android:gravity="center"
        android:background="@color/global_color"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/font_18_sp"
        android:visibility="gone"
        android:text="退出登录"/>

    <LinearLayout
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_login_out"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/value_45_dp"
            android:layout_height="@dimen/value_45_dp"
            android:background="@mipmap/iv_head_image"
            android:layout_marginTop="@dimen/value_10_dp"
            android:layout_marginBottom="@dimen/value_10_dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_color_333333"
            android:textSize="15sp"
            android:text="name"/>

        <TextView
            android:id="@+id/tv_login_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录状态"
            android:textSize="15sp"
            android:textColor="@color/common_color_999999"/>




    </LinearLayout>


</RelativeLayout>
