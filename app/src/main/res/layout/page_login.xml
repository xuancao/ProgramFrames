<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xuancao.programframes.ui.view.PTitleBarView
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_45_dp"
            android:layout_marginTop="@dimen/value_60_dp"
            android:layout_marginLeft="@dimen/value_50_dp"
            android:layout_marginRight="@dimen/value_50_dp"
            android:maxLength="11"
            android:hint="请输入手机号"/>

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_50_dp"
            android:layout_marginRight="@dimen/value_50_dp"
            android:layout_marginTop="@dimen/value_10_dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_height="@dimen/value_45_dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="请输入验证码"/>

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_10_dp"
                android:paddingLeft="@dimen/value_10_dp"
                android:paddingRight="@dimen/value_20_dp"
                android:background="#eeeeee"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/common_color_333333"
                android:textSize="15sp"
                android:text="验证码"/>

        </LinearLayout>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_45_dp"
        android:layout_marginTop="@dimen/value_10_dp"
        android:layout_marginLeft="@dimen/value_50_dp"
        android:layout_marginRight="@dimen/value_50_dp"
        android:maxLength="20"
        android:hint="请输入密码"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_50_dp"
        android:layout_marginLeft="@dimen/value_50_dp"
        android:layout_marginRight="@dimen/value_50_dp"
        android:layout_marginTop="@dimen/value_30_dp"
        android:text="登 录"
        android:textColor="@color/common_color_FFFFFF"
        android:textSize="15sp"
        android:background="@color/global_color"/>

    <TextView
        android:id="@+id/tv_login_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/value_10_dp"
        android:paddingRight="@dimen/value_10_dp"
        android:background="#eeeeee"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/value_50_dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/common_color_333333"
        android:textSize="15sp"
        android:text="验证码登录"/>

    </LinearLayout>


